@model SignUpViewModel
@{
    Layout = "_Layout";
}

<div class="container">
    <h2>Create New Employee</h2><br />
    <div class="row">
        <div asp-validation-summary="All" class="text-danger"></div>
    </div><br />
    <form method="post" asp-action="CreateEmployee" asp-controller="account">
        <div class="row">
            <div class="col-md-3">
                <label asp-for="UserName" class="form-check-label"></label>
            </div>
            <div class="col-md-3">
                <input asp-for="UserName" type="text" class="form-control" />
            </div>
        </div><br />
        <div class="row">
            <div class="col-md-3">
                <label asp-for="UserEmail" class="form-check-label"></label>
            </div>
            <div class="col-md-3">
                <input asp-for="UserEmail" type="text" class="form-control" />
            </div>
        </div><br />
        <div class="row">
            <div class="col-md-3">
                <label asp-for="UserMobileNo" class="form-check-label"></label>
            </div>
            <div class="col-md-3">
                <input asp-for="UserMobileNo" type="text" class="form-control" />
            </div>
        </div><br />
        <div class="row">
            <div class="col-md-3">
                <label asp-for="UserDob" class="form-check-label"></label>
            </div>
            <div class="col-md-3">
                <input asp-for="UserDob" type="date" class="form-control" />
            </div>
        </div><br />
        <div class="row">
            <div class="col-md-3">
                <label asp-for="UserPassword" class="form-check-label"></label>
            </div>
            <div class="col-md-3">
                <input asp-for="UserPassword" type="password" class="form-control" />
            </div>
        </div><br />
        <div class="row">
            <div class="col-md-3">
                <label asp-for="ConfirmPassword" class="form-check-label"></label>
            </div>
            <div class="col-md-3">
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
            </div>
        </div><br />
        <div class="row">
            <div class="col-md-3">

            </div>
            <div class="col-md-3">
                @*<button class="btn btn-dark" asp-action="ListOfEmployee" asp-controller="account">Back</button>*@
                <a asp-action="ListOfEmployee" asp-controller="Account" class=" btn btn-dark">Back</a>
                <button class="btn btn-primary" type="submit"> Add </button>
            </div>
        </div>
    </form>
    
</div>
